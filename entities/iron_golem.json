      "minecraft:from_village": {
        "add": {
          "component_groups": [
            "minecraft:village_created"
          ]
        }
      },
      "minecraft:on_leash": {
        "add": {
          "component_groups": [
            "minecraft:golem_leashed"
          ]
        }
      },
      "minecraft:on_unleash": {
        "remove": {
